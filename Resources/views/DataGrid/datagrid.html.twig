{% block datagrid_column_type_fsi_file_cell %}
{% spaceless %}
<td>
    <div>
        {% endspaceless %}
        {% for val in cell.value %}
            {% if is_fsi_file(val) %}
                <a href="{{ fsi_file_url(val) }}" target="_blank">{{ val|fsi_file_basename }}</a>
            {% endif %}
        {% endfor %}
        {% spaceless %}
    </div>
</td>
{% endspaceless %}
{% endblock %}

{% block datagrid_column_type_fsi_image_cell %}
{% spaceless %}
<td>
    <div>
        {% endspaceless %}
        {% for val in cell.value %}
            {% if is_fsi_file(val) %}
                <img src="{{ fsi_file_url(val) }}" style="width: {{ cell.attributes.width }}px" />
            {% endif %}
        {% endfor %}
        {% spaceless %}
    </div>
</td>
{% endspaceless %}
{% endblock %}
